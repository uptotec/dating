{
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      "**/*.pug"
    ],
    "watchAssets": true,
    "plugins": [
      {
        "name": "@nestjs/swagger/plugin",
        "options": {
          "classValidatorShim": true,
          "introspectComments": false,
          "dtoFileNameSuffix": [
            ".dto.ts",
            ".schema.ts"
          ]
        }
      }
    ]
  }
}